client
dev tun
proto <%= node['openvpn']['proto'] %>
remote <%= node['openvpn']['gateway'] %> <%= node['openvpn']['port'] %>
resolv-retry infinite
nobind
persist-key
persist-tun
ca ca.crt
cert <%= @username %>.crt
key <%= @username %>.key
<% if node["openvpn"]["tls"] == true -%>
tls-auth ta.key 1
<% end -%>
comp-lzo
verb 3
